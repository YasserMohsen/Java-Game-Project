<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="border" prefHeight="600.0" prefWidth="800.0" styleClass="border" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clienttictactoe.HomeController">

    <top>
        <HBox alignment="TOP_CENTER">
            <children>
               <Button fx:id="reg" onAction="#signupBtn" prefHeight="50.0" prefWidth="220.0" styleClass=" selected">Sign up</Button>
               <Button fx:id="log" onAction="#loginBtn" prefHeight="50.0" prefWidth="220.0" styleClass="unselected">Login</Button>
               <Button fx:id="off" onAction="#offlineBtn" prefHeight="50.0" prefWidth="220.0" styleClass="unselected">Play Offline</Button>
            </children>
        
         <padding>
            <Insets top="40.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
  
        </HBox>  
    </top>
 
    <center>
        
<!--       
  <fx:include fx:id="signup" source="register.fxml" visible="true" />
        -->
    </center>
   <bottom>
         <Button fx:id="fbLog" visible="false" styleClass="buttonsStyle" textFill="WHITE" mnemonicParsing="false" onAction="#fbLogin" prefHeight="60.0" prefWidth="300.0" text="Register with Facebook" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
         <font>
            <Font name="Jet" size="22.0" />
         </font>
      </Button>
   </bottom>  

</BorderPane>
